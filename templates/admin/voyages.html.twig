{% extends 'base.html.twig' %}

{% block body %}
        {{ dump(voyages) }}

<div class="container-fluid">
    <h1 class="my-5 text-center">Voyages</h1>
    <div class="text-center mb-3">
        <a href="{{ path('admin_voyages_nouveau') }}" class="btn btn-success text-white mb-3">
            Cr√©er un nouveau post de  voyage
            
        </a>
    </div>
    <table class="table table-hover">
        <thead class="thead dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>description</th>
                <th>Actions</th>
            <tbody>
                    {%  for voyage in voyages %}                    
                <tr>
                    <td>{{ voyage.id }}</td>
                    <td>{{ voyage.titre }}</td>
                    <td>{{ voyage.description }}</td>
                    <td>
                        <a href="{{ path('admin_voyages_edit', {
                            'id' : voyage.id
                        }) }}" class="btn btn-warning">
                        <i class="fas fa-edit"></i>
                        Editer
                        </a>
                        <a href="{{ path('admin_voyages_delete', {
                            id: voyage.id
                        }) }}" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                        Supprimer
                        </a>
                    </td>
                </tr>
                    {% endfor %}
            </tbody>

            </tr>
        </thead>
    </table>
</div>

{% endblock %}
